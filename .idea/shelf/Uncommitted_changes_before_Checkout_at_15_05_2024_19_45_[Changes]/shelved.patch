+import MVC.model.entity.Employe;
+import MVC.view.Gui.JDialogConnexion;
+import MVC.view.ViewAppart;
+
+import java.awt.event.ActionEvent;
+import java.awt.event.ActionListener;
+
+public class controller implements ActionListener {
+    private DAOEmployes model;
+    private JDialogConnexion view;
+    public controller(DAOEmployes m, JDialogConnexion J){
+        this.model=m;
+        this.view=J;
+        this.view.setController(this);
+    }
+    public void run(){
+        view.run();
+    }
+    public void actionPerformed(ActionEvent e) {
+        if (e.getActionCommand() == "connexion"){
+
+            Employe employe=view.getitems();
+            if(employe.getNom().isEmpty() || employe.getMdp()==""){
+                System.out.println("Hello world!");
+                view.showMessage("veillez renseigner tous les champs");
+            }
+            else{
+                if(model.containt(employe.getNom(),employe.getMdp())){
+                    view.showMessage("bienvenue");
+                }
+                else{
+                    view.showErroMessage("l'utilisateur n'existe pas dans la bd");
+                }
+            }
+        }
+
+    }
+}
